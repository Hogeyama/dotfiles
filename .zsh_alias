
cd-ls(){
  \cd $* && \ls --group-directories-first --color=tty
  #\cd $* && \exa --group-directories-first
  dirs -lp | awk '!x[$0]++' | sed "/home\/hogeyama\$/d" > "$HOME/.dirs_history"
  # awk '!x[$0]++': remove duplicates without sorting
}

